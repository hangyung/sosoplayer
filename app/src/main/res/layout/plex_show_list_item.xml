<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:background="@drawable/frame_gallery_thumb"
  >
  <ImageView
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/show_poster_imageview"
    android:scaleType="fitXY" />
  <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="true"
    android:layout_alignParentTop="true"
    android:background="@color/main_menu_category"
    android:textSize="10dp"
    android:textColor="@android:color/black"
    android:id="@+id/show_episode_count"
    />
  <TextView
    android:layout_alignParentBottom="true"
    android:layout_below="@+id/show_poster_imageview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="2dp"
    android:textSize="12sp"
    android:ellipsize="end"
    android:textStyle="bold"
    android:maxLines="1"
    android:id="@+id/show_title_textview"
    android:textColor="@android:color/black"
    android:background="@android:color/darker_gray"
    android:layout_gravity="center"
    android:gravity="center"/>
</RelativeLayout>