<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- focused -->
    <item android:state_focused="true" android:color="@color/main_menu_item_text_pressed"/>

    <!-- focused and pressed -->
    <item android:state_focused="true" android:state_pressed="true" android:color="@color/main_menu_item_text_pressed"/>

    <!-- pressed -->
    <item android:state_pressed="true" android:color="@color/main_menu_item_text_pressed"/>

    <!-- default -->
    <item android:color="@color/main_menu_item_text"/>

</selector>